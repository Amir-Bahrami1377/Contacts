@using Contacts.ViewModels.Contacts
@using PagedList.Mvc
@model ContactsListVM

@section styles
{
    @Styles.Render("~/Content/PagedList")
}

@{
    ViewBag.Title = "فهرست مخاطبین";
}

<h2>مخاطبین</h2>

<p>
    @Html.ActionLink("افزودن مخاطب جدید", "CreateEdit", null, new { @class = "btn btn-primary" })
</p>

@using (Html.BeginForm("Index", "Contacts", FormMethod.Get, new { @class = "form-inline" }))
{
    <div class="form-group">
        <label for="searchString" class="sr-only">جستجو</label>
        @Html.TextBox("SearchString", Model.SearchString as string, new { id = "searchString", @class = "form-control mb-2 mr-sm-2" })
    </div>
    <button type="submit" class="btn btn-info mb-2">جستجو</button>
}

<table class="table table-hover table-borderless">

    @foreach (var item in Model.PagedContacts)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.ActionLink("شماره ها", "Index", "Phones", new { id = item.ID }, new { @class = "btn btn-outline-info" })
            </td>
            <td>
                @Html.ActionLink("ویرایش", "CreateEdit", new { id = item.ID }, new { @class = "btn btn-outline-success" })
                @Html.ActionLink("جزئيات", "Details", new { id = item.ID }, new { @class = "btn btn-outline-secondary" })
                @Html.ActionLink("حذف", "Delete", new { id = item.ID }, new { @class = "btn btn-outline-danger" })
            </td>
        </tr>
    }

</table>

<br />

<h3>
@Html.PagedListPager(Model.PagedContacts, page => Url.Action("Index", new { page, searchString = Model.SearchString }))
</h3>