@using Contacts.ViewModels.Phones
@model PhoneCreateEditVM

@{
    var title = Model == null || Model.ID == 0 ? "ایجاد" : "ویرایش";
    ViewBag.Title = title;
}

<h2>@title</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <br />
        @Html.HiddenFor(model => model.ID)
        @Html.HiddenFor(model => model.ContactID)
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <h6>: شماره تماس</h6>
            <div class="col-md-10">
                @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@title" class="btn btn-success" />
                @Html.ActionLink("برگشت", "Index", new { id = Model.Contact.ID }, new { @class = "btn btn-secondary" })
            </div>
        </div>
    </div>
}